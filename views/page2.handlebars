    <input type="number" name="beds" value="">
    <input type="submit" value="submit">
  </form>
  
  <br/>
  <br/>
  

  <form action="/updateLast" method="POST">
    <input type="submit" value="Update Last">
  </form>
  
  <br/>
  <br/>
  
  <form action="findByName" method="GET">
    <label for="name">Name to search for:</label>
    <input type="text" name="name" value="">
    <input type="submit" value="Submit">
  </form>
</body>
</html>